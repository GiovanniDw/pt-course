<h3>Games</h3>
<div>
    <ul class="games">
        <% for (var index = 0; index < user.games.length; index++) { %>
        <li class="item">
        
            <img src="/uploads/<%= user.games[index].cover %>" alt="<%= user.games[index].title %>">
            <button id=js-remove
                    data-id="<%= user.games[index]._id %>"
                    class="icon remove material-icons">close</button>
        </li>
        <% } %>
        <li class="item">
            <img src="images/add-game.png" alt="">
            <a href='/games' id="" class="icon add material-icons">add</a>
        </li>
    </ul>    
</div>
