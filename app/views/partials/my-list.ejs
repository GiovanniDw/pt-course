

<h2>Add the games that you play</h2>

<div>
    <ul class="games">
        <% for (var index = 0; index < user.games.length; index++) { %>
        <li class="item">
        
            <img src="/uploads/<%= user.games[index].cover %>" alt="<%= user.games[index].title %>">
            <button id=js-remove
                    data-id="<%= user.games[index]._id %>"
                    class="remove material-icons">close</button>
        </li>
        <% } %>
        <li class="item">

            <img src="https://via.placeholder.com/100x125" alt="">
            <button id="show-add"class="add material-icons">add</button>
        </li>
    </ul>    
</div>
