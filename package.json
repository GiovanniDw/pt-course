{
  "name": "gamer",
  "version": "1.0.0",
  "description": "Gamers around the world can find each other based on games",
  "main": "server.js",
  "scripts": {
    "eslint": "node_modules/.bin/eslint server.js app/controllers/*.js app/static/js/*.js",
    "stylelint": "node_modules/.bin/stylelint app/static/css/*.css",
    "test": "test",
    "start": "node server.js",
    "nmStart": "nodemon server.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/GiovanniDw/pt-course.git"
  },
  "keywords": [
    "Dating"
  ],
  "author": "Giovanni",
  "license": "ISC",
  "dependencies": {
    "apicalypse": "^0.1.3",
    "body-parser": "^1.18.3",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "mongoose": "^5.7.5",
    "multer": "^1.4.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "passport-local-mongoose-email": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^5.15.3",
    "jshint": "^2.10.2",
    "nodemon": "^1.18.10",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "engines": {
    "node": "10.15.2"
  },
  "nodemonConfig": {
    "start": "npm run test",
    "restart": "npm run test"
  },
  "eslintIgnore": [
    "*.ejs",
    "node_modules/"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-var": "error"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": "tab",
      "number-leading-zero": "never",
      "no-descending-specificity": null
    }
  }
}
